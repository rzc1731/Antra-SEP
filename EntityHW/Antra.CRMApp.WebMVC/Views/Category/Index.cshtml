@model IEnumerable<CategoryModel>
<a asp-action="Create" asp-controller="Category" class="btn btn-success" >Add Category</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var m in Model)
        {
            <tr>
                <td>@m.Id</td>
                <td>@m.Name</td>
                <td>@m.Description</td>
                <td><a asp-action="Edit" asp-controller="Category" asp-route-id="@m.Id"  class="btn btn-primary">Edit</a> &nbsp <a class="btn bg-danger" asp-action="Delete" asp-controller="Category" asp-route-id="@m.Id">Delete</a></td>
            </tr>
        }
    </tbody>
</table>