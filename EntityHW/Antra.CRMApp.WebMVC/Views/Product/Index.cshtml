@model IEnumerable<ProductModel>
<a asp-action="Create" asp-controller="Product" class="btn btn-success" >Add Product</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>QuantityPerUnit</th>
            <th>UnitPrice</th>
            <th>UnitsInStock</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var m in Model)
        {
            <tr>
                <td>@m.Id</td>
                <td>@m.Name</td>
                <td>@m.QuantityPerUnit</td>
                <td>@m.UnitPrice</td>
                <td>@m.UnitsInStock</td>
                <td><a asp-action="Info" asp-controller="Product" asp-route-id="@m.Id"  class="btn btn-info">Info</a>&nbsp<a asp-action="Edit" asp-controller="Product" asp-route-id="@m.Id"  class="btn btn-primary">Edit</a>&nbsp<a class="btn bg-danger" asp-action="Delete" asp-controller="Product" asp-route-id="@m.Id">Delete</a></td>
            </tr>
        }
    </tbody>
</table>

