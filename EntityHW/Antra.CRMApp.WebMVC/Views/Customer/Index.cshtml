@model IEnumerable<CustomerModel>
<a asp-action="Create" asp-controller="Customer" class="btn btn-success" >Add Customer</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Title</th>
            <th>Phone</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var m in Model)
        {
            <tr>
                <td>@m.Id</td>
                <td>@m.Name</td>
                <td>@m.Title</td>
                <td>@m.Phone</td>
                <td><a asp-action="Edit" asp-controller="Customer" asp-route-id="@m.Id"  class="btn btn-primary">Edit</a>&nbsp<a class="btn bg-danger" asp-action="Delete" asp-controller="Customer" asp-route-id="@m.Id">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
